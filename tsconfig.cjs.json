{
  "compilerOptions": {
    "outDir": "dist/cjs",
    "module": "CommonJS",
    "target": "ES2018",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "declarationDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",  // Exclude node_modules
    "dist"           // Exclude build output folders like dist
  ]
}