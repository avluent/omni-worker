{
  "compilerOptions": {
    "outDir": "dist/cjs",
    "module": "CommonJS",
    "target": "ES2018",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests_node__/mock/**/*.ts",
    "__tests_node__/mock/**/*.d.ts"
  ]
}